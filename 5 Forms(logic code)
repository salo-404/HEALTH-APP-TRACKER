//Third Form : The fitness Page
using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace WinFormsApp2
{

    public partial class fitness : Form
    {
        public fitness()
        {
            InitializeComponent();
        }

        private void textBox3_TextChanged(object sender, EventArgs e)
        {

        }

        private void fitness_Load(object sender, EventArgs e)
        {

        }

        private void label6_Click(object sender, EventArgs e)
        {

        }

        private void button1_Click(object sender, EventArgs e)
        {
       
            string feedback = "";

            // Steps Evaluation
            if (int.TryParse(textBox4.Text, out int steps))
            {
                if (steps < 2000)
                    feedback += $"ðŸ¦¶ Steps: {steps} â€“ Very low, walk more!\n";
                else if (steps < 5000)
                    feedback += $"ðŸ¦¶ Steps: {steps} â€“ Not enough\n";
                else if (steps < 8000)
                    feedback += $"ðŸ¦¶ Steps: {steps} â€“ Good\n";
                else if (steps <= 12000)
                    feedback += $"ðŸ¦¶ Steps: {steps} â€“ Excellent!\n";
                else
                    feedback += $"ðŸ¦¶ Steps: {steps} â€“ Overactive! Take care\n";
            }
            else
            {
                MessageBox.Show("Please enter a valid number for steps.");
                return;
            }

            // Exercise Duration Evaluation
            if (int.TryParse(textBox2.Text, out int exerciseMinutes))
            {
                if (exerciseMinutes < 10)
                    feedback += $"ðŸ‹ï¸ Exercise: {exerciseMinutes} mins â€“ Too short\n";
                else if (exerciseMinutes < 30)
                    feedback += $"ðŸ‹ï¸ Exercise: {exerciseMinutes} mins â€“ Okay\n";
                else if (exerciseMinutes <= 60)
                    feedback += $"ðŸ‹ï¸ Exercise: {exerciseMinutes} mins â€“ Good\n";
                else
                    feedback += $"ðŸ‹ï¸ Exercise: {exerciseMinutes} mins â€“ Long session! Rest well\n";
            }
            else
            {
                MessageBox.Show("Please enter a valid number for exercise minutes.");
                return;
            }

            // Calories Evaluation
            if (int.TryParse(textBox3.Text, out int intake)){
                int net = intake;

                if (net < 1200)
                    feedback += $"ðŸ”¥ Net Calories: {net} â€“ Too low, eat more\n";
                else if (net < 2000)
                    feedback += $"ðŸ”¥ Net Calories: {net} â€“ Balanced\n";
                else if (net < 2500)
                    feedback += $"ðŸ”¥ Net Calories: {net} â€“ Slightly high\n";
                else
                    feedback += $"ðŸ”¥ Net Calories: {net} â€“ High intake! Watch diet\n";
            }
            else
            {
                MessageBox.Show("Please enter valid numbers for calories.");
                return;
            }

            // Final Output
            MessageBox.Show(feedback, "Fitness Feedback");
        }

        private void textBox4_TextChanged(object sender, EventArgs e)
        {

        }
    }
}


  // fourth form : vitals
using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace WinFormsApp2
{
   
    public partial class Vitals : Form
    {
        public Vitals()
        {
            InitializeComponent();
        }



        private void textBox1_TextChanged(object sender, EventArgs e)
        {

        }

        private void textBox2_TextChanged(object sender, EventArgs e)
        {

        }

        private void textBox3_TextChanged(object sender, EventArgs e)
        {

        }

        private void Vitals_Load(object sender, EventArgs e)
        {

        }

        private void button1_Click(object sender, EventArgs e)
    
        {
            string feedback = "";

            // Blood Pressure Evaluation
            if (int.TryParse(textBox1.Text, out int sys) &&
                int.TryParse(textBox4.Text, out int dia))
            {
                if (sys < 90 || dia < 60)
                    feedback += $"ðŸ’‰ Blood Pressure: {sys}/{dia} â€“ Low BP\n";
                else if (sys <= 120 && dia <= 80)
                    feedback += $"ðŸ’‰ Blood Pressure: {sys}/{dia} â€“ Normal BP\n";
                else if (sys <= 140 || dia <= 90)
                    feedback += $"ðŸ’‰ Blood Pressure: {sys}/{dia} â€“ Elevated BP\n";
                else
                    feedback += $"ðŸ’‰ Blood Pressure: {sys}/{dia} â€“ High BP\n";
            }
            else
            {
                MessageBox.Show("Enter valid blood pressure numbers.");
                return;
            }

            // Glucose Evaluation
            if (int.TryParse(textBox2.Text, out int glucose))
            {
                if (glucose < 70)
                    feedback += $"ðŸ¬ Glucose: {glucose} mg/dL â€“ Low\n";
                else if (glucose <= 99)
                    feedback += $"ðŸ¬ Glucose: {glucose} mg/dL â€“ Normal\n";
                else if (glucose <= 125)
                    feedback += $"ðŸ¬ Glucose: {glucose} mg/dL â€“ Prediabetic\n";
                else
                    feedback += $"ðŸ¬ Glucose: {glucose} mg/dL â€“ Diabetic\n";
            }
            else
            {
                MessageBox.Show("Enter a valid glucose level.");
                return;
            }

            // Pulse Evaluation
            if (int.TryParse(textBox3.Text, out int pulse))
            {
                if (pulse < 60)
                    feedback += $"ðŸ’“ Pulse: {pulse} bpm â€“ Low\n";
                else if (pulse <= 100)
                    feedback += $"ðŸ’“ Pulse: {pulse} bpm â€“ Normal\n";
                else
                    feedback += $"ðŸ’“ Pulse: {pulse} bpm â€“ High\n";
            }
            else
            {
                MessageBox.Show("Enter a valid pulse rate.");
                return;
            }

            // Show the combined feedback
            MessageBox.Show(feedback, "Vitals Feedback");
        }

    }
}

